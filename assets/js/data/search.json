---
layout: none
---
[
  {% for post in site.posts %}
    {
      "title": "{{ post.title | escape }}",
      "categories": "{% for category in post.categories %}{% assign category_page = site.pages | where: "category", category | first %}{% if category_page and category_page.title %}{{ category_page.title }}{% else %}{{ category }}{% endif %}{% unless forloop.last %}, {% endunless %}{% endfor %}",
      "tags": "{{ post.tags | join: ', ' }}",
      "url": "{{ site.baseurl }}{{ post.url }}",
      "date": "{{ post.date }}",
      "content": "{{ post.content | strip_html | strip_newlines | truncate: 200 }}"
    } {% unless forloop.last %},{% endunless %}
  {% endfor %}
]
